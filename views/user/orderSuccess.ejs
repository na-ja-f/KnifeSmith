<%- include('../layouts/header') %>

    <div class="login-page" style="background-color: rgb(255, 255, 255); margin-top: 80px; margin-bottom: 80px;">
        <div class="container">

            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card  mb-5" style="border: solid rgba(0, 0, 0, 0.279) 1px;">
                            <div class="card-body text-center"
                                style="display: flex;flex-direction: column;align-items: center;">

                                <h3 class="mt-3 text-success">Order Placed Successfully!</h3>

                                <p class="lead">Your order details:</p>
                                <ul class="list-group mb-4">
                                    <li class="list-group-item"><strong>Order ID:</strong>
                                        <%= orderData.orderID %>
                                    </li>
                                    <li class="list-group-item"><strong>Order Date:</strong>
                                        <%= orderData.orderDate.toDateString() %>
                                    </li>
                                    <li class="list-group-item"><strong>Shipping Details:</strong>
                                        <p><strong>Name:</strong>
                                            <%= orderData.address.name %>
                                        </p>
                                        <p><strong>Phone:</strong>
                                            <%= orderData.address.phone %>
                                        </p>
                                        <p><strong>Pin Code:</strong>
                                            <%= orderData.address.pincode %>
                                        </p>
                                    </li>
                                    <li class="list-group-item"><strong>Payment Method:</strong>
                                        <%= orderData.paymentMethod %>
                                    </li>
                                </ul>
                                <p class="text-primary">Expected Delivery: Within 2-4 days</p>

                                <div class="d-flex">
                                    <a href="/" class="btn btn-outline-primary-2 m-4">Continue Shopping</a>
                                    <a class="btn btn-outline-primary-2 m-4"
                                        href="/userorderdetails?orderId=<%= orderData._id.toString() %>">Order
                                        Details</a>
                                    <a class="btn btn-outline-primary-2 m-4"
                                        href="/generate-invoice/<%= orderData._id %>">Invoice</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>






        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->


    <%- include('../layouts/footer.ejs') %>